    <Header />
    <main class="md:w-3/4 lg:w-3/5 md:mx-auto [&_section]:py-20 [&_section]:px-10 ">
      
    <!-- Home Section -->
    <section id="home" class="text-center h-svh -mt-20 max-h-screen flex flex-col items-center justify-center">
      <h1 class="text-4xl md:text-6xl font-bold">Hola, soy Martin</h1>
      <p class="text-xl md:text-2xl mt-2">Ingeniero de Software <span class="text-teal-400">Desarrollador Full Stack</span>.<br />Apasionado por la tecnología</p>
      <div class="border-teal-500 border-2 text-white text-md font-semibold py-2 px-4 rounded-full mt-6">Disponible para trabajar</div>
      <!-- Social links -->
      <div class="flex justify-center gap-4 mt-4">
        <a href="https://linkedin.com/in/martin-anton/" class="text-teal-400 flex gap-2 items-center">
