<!doctype html>
<html lang="es" class="bg-slate-950">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body class="bg-radial-gradient from-slate-700 to-slate-950">
    <!-- Component: Success Alert With Icon -->
    <div id="alert-copy" class="hidden fixed bottom-10 left-10 items-start gap-4 px-4 py-3 text-sm border rounded border-emerald-100 bg-emerald-50 text-emerald-500" role="alert">
